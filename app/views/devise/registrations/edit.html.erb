<div class="edit-user-view">
  <div class="edit-user-left">
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, alt: "Votre photo de profil", height: 300, width: 300, crop: :fill, class: "avatar-large" %>
    <% else %>
      <%= image_tag "PB_logo2.png", alt: "default avatar", class: "avatar-large" %>

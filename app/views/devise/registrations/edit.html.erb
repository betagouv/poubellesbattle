                  value_method: :first %>
        <% end %>
        <%= f.input :password,
                    hint: "laisser vide si vous ne voulez pas changer de mot de passe",
                    required: false, placeholder: "nouveau mot de passe ?",
                    input_html: { autocomplete: "new-password" } %>

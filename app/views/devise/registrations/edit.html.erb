                  label: "Voulez-vous recevoir la newsletter de Poubelles Battle ? (1 fois par mois max !)",
                  as: :radio_buttons,
                  collection: [[true, "oui ! ü•≥"], [false, "non..üòï"]],
                  label_method: :last,

                <% if current_user.admin? %>
                  <div class="mini-btn"><%= link_to("retirer ce référent", admin_non_referent_path(@composteur, referent_id: referent), method: :post) %></div>
                <% end %>
              <% end %>
              <h5 class="first-name is-referent-bg"><%= referent.first_name %></h5>
